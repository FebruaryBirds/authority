<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.dao.MenuFunctionMapper">
    <resultMap id="baseResultMap" type="com.system.entity.MenuFunctionEntity">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="searchCode" column="search_code" jdbcType="VARCHAR"/>
        <result property="fullName" column="full_name" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="TINYINT"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="sort" column="sort" jdbcType="TINYINT"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="component" column="component" jdbcType="VARCHAR"/>
        <result property="i18n" column="i18n" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createUser" column="create_user" jdbcType="BIGINT"/>
        <result property="updateUser" column="update_user" jdbcType="BIGINT"/>
        <result property="deleted" column="deleted" jdbcType="TINYINT"/>
    </resultMap>

    <insert id="insert" parameterType="com.system.entity.PrivilegeEntity">
        insert into menu_func(name, parent_id, code, search_code, full_name, type, url,sort,icon,component,i18n,
                              create_time, update_time, create_user, update_user, deleted)
        values(
               #{name ,jdbcType = VARCHAR},
               #{parent_id ,jdbcType = INTEGER},
               #{code ,jdbcType = VARCHAR},
               #{searchCode ,jdbcType = VARCHAR},
               #{fullName ,jdbcType = VARCHAR},
               #{type ,jdbcType = TINYINT},
               #{url ,jdbcType = VARCHAR},
               #{sort ,jdbcType = TINYINT},
               #{icon ,jdbcType = VARCHAR},
               #{component ,jdbcType = VARCHAR},
               #{i18n ,jdbcType = VARCHAR},
               #{createTime ,jdbcType = TIMESTAMP},
               #{updateTime ,jdbcType = TIMESTAMP},
               #{createUser ,jdbcType = BIGINT},
               #{updateUser ,jdbcType = BIGINT},
               #{deleted ,jdbcType = TINYINT}
              )
    </insert>

    <update id="update" parameterType="com.system.entity.MenuFunctionEntity">
        update menu_func
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">name=#{name},</if>
            <if test="parentId != null">parent_id=#{parentId},</if>
            <if test="code != null">code=#{code},</if>
            <if test="searchCode != null">search_code=#{searchCode},</if>
            <if test="fullName != null">full_name=#{fullName},</if>
            <if test="type != null">type=#{type},</if>
            <if test="url != null">url=#{url},</if>
            <if test="sort != null">sort=#{sort},</if>
            <if test="icon != null">icon=#{icon},</if>
            <if test="component != null">component=#{component},</if>
            <if test="i18n != null">i18n=#{i18n},</if>
            <if test="updateTime != null">update_time=#{updateTime},</if>
            <if test="updateUser != null">update_user=#{updateUser},</if>
        </trim>
        where id = #{id, jdbcType = BIGINT}
    </update>

    <select id="getByParam" parameterType="java.util.Map" resultMap="baseResultMap">
        select * from menu_func
        where deleted = 0
        <include refid="queryState"/>
        limit 1
    </select>

    <select id="listByParam" parameterType="java.util.Map" resultMap="baseResultMap">
        select * from menu_func
        where deleted = 0
        <include refid="queryState"/>
    </select>

    <sql id="queryState">
        <if test="id!=null">
            and id = #{id}
        </if>
        <if test="name!=null and name!=''">
            and name = #{name}
        </if>
        <if test="code!=null and code!=''">
            and code = #{code}
        </if>
    </sql>


    <delete id="delete" parameterType="java.lang.Integer">
        update menu_func set deleted = 1 where id in
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

</mapper>